{
    "name": "Python Dev",
    "image": "docker.io/rkrispin/forecast-poc:0.0.0.9002",
    // "build": {
    //     "dockerfile": "Dockerfile",
    //     "context": ".",
    //     "args": {
    //         "VENV_NAME": "forecasting-poc",
    //         "QUARTO_VER": "1.3.450"
